<div class="wrapper">
  <div class="container">


    <h1>This is your dashbord</h1>



    <h2>Bookings Pending</h2>

    <% @received_bookings.each do |received_booking| %>
      <div class="col-xs-12">
        <div class="listcard">

          <div class="listcard-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('camping_orange_bois.jpg');">
          </div>

            <div class="listcard-category"><%= received_booking.user_id %>


              <h2><%= received_booking.start_date %></h2>
              <h2><%= received_booking.end_date %></h2>
              <p> R$<%= received_booking.price %></p>
            </div>

        </div>
      </div>
      <div class="listcard-btn">
        <%= link_to t(".top_call_to_action", default: "Accept"), accept_received_booking_path(received_booking), class: "btn btn-success", id: "listcard-btn" %>
        <%= link_to t(".top_call_to_action", default: "Decline"), decline_received_booking_path(received_booking), class: "btn btn-success", id: "listcard-btn" %>
      </div>
    <% end %>

    <h2>Your Campings</h2>

    <% current_user.campings.each do |camping| %>
      <div class="col-xs-12">
        <div class="listcard">

          <div class="listcard-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('camping_orange_bois.jpg');">
          </div>

            <div class="listcard-category"><%= camping.camping_name %>


              <h2><%= camping.description %></h2>
              <p>R$<%= camping.pricing %> </p>
            </div>

            <div class="listcard-btn">
              <%= link_to t(".top_call_to_action", default: "Book It"), new_camping_booking_path(camping.id), class: "btn btn-success", id: "listcard-btn" %>
            </div>
            <div class="listcard-btn">
              <%= link_to t(".top_call_to_action", default: "Destroy It"), camping_path(camping.id), method: :delete, class: "btn btn-success", id: "listcard-btn" %>
            </div>
        </div>
      </div>
       <% end %>
    <br>

    <h2>Your upcoming bookings</h2>


  </div>
</div>
