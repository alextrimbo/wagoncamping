          </div>
          <div class="listcard-btn">
            <%= link_to t(".top_call_to_action", default: "Mande uma mensagem"), campings_path, class: "btn btn-success", id: "listcard-btn" %>
          </div>
        </div>
      </div>

        <br>
        <br>
        <%= link_to t(".top_call_to_action", default: "Back home"), root_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
